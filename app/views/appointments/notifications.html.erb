<p id="notice"><%= notice %></p>

<h1>Listing Notifications For <%= @appointment.event %></h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Notification type</th>
      <th>User</th>
      <th>Appointment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= notification.time %></td>
        <td><%= notification.notification_type %></td>
        <td><%= notification.user.email %></td>
        <td><%= notification.appointment.event %></td>
        <td><%= link_to 'Show', notification %></td>
        <td><%= link_to 'Edit', edit_notification_path(notification) %></td>
        <td><%= link_to 'Destroy', notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Send Text', notification, method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Notification', new_appointment_notification_path(@appointment) %>
